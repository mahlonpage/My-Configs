set whichwrap+=<,>,h,l
syntax on 
filetype plugin indent on

colorscheme torte 

" Add line numbers, coloring
set number
highlight LineNr ctermfg=grey

" Tabstop represented as 4 spaces 
set tabstop=4 
" 4 space indents
set shiftwidth=4 smarttab
" Auto-replace tabs with spaces
set expandtab
set ai "Auto indent
set si "Smart indent
set wrap "Wrap line
